# 应用配置
ENVIRONMENT=development
LOG_LEVEL=INFO

# EDINET API配置
EDINET_API_KEY=your_edinet_api_key_here
EDINET_API_URL=https://disclosure.edinet-fsa.go.jp/api

# 向量数据库配置
CHROMA_HOST=chromadb
CHROMA_PORT=8001
CHROMA_AUTH_TOKEN=test-token
CHROMA_COLLECTION_NAME=edinet_reports

# LLM配置
OLLAMA_HOST=ollama
OLLAMA_PORT=11434
OLLAMA_MODEL=elyza-japanese-llama-2-7b:latest

# 嵌入模型配置
EMBEDDING_MODEL=intfloat/multilingual-e5-large-instruct
EMBEDDING_DEVICE=cpu  # 或 cuda

# 文本处理配置
CHUNK_SIZE=500
CHUNK_OVERLAP=50
MAX_CHUNKS_PER_DOCUMENT=100